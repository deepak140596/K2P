<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    android:padding="3dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/horizontal_image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:padding="7dp"
            android:src="@mipmap/defaultimg" />

        <TextView
            android:id="@+id/horizontal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/horizontal_image"
            android:layout_gravity="center_horizontal"
            android:text="@string/title"
            android:textColor="#000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/horizontal_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/horizontal_title"
            android:layout_gravity="center_horizontal"
            android:text="@string/fixed_price"
            android:textColor="#000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/time_hor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_alignEnd="@+id/horizontal_image"
            android:layout_below="@+id/horizontal_image"
            android:text="time"
            android:textSize="8sp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>