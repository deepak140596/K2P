<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <RelativeLayout
        android:id="@+id/message_single_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/message_single_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/message_text_background"
            android:padding="15dp"
            android:text="@string/title"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/message_single_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/message_text_background2"
            android:padding="15dp"
            android:text="@string/title"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RelativeLayout>



</RelativeLayout>